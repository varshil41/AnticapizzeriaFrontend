		void getdata(int x,int y)
		{
			a=x;
			b=y;
		}
		void putdata()
		{
			cout<<"\nA = "<<a;
			cout<<"\nB = "<<b;
		}
		void multi()
		{
			cout<<"\n MUL = "<<ans;
		}
		friend mul hey(mul &m1);
};
mul hey(mul &m1)
{
	mul m2;
	int mul :: *ptr = &mul :: a;
	int mul :: *ptr1 = &mul :: b;
	m2.ans=(m1.*ptr)*(m1.*ptr1);
	return m2;
}
