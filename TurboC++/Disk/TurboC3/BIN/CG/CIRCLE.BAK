#include<conio.h>
#include<stdio.h>
#include<graphics.h>
#include<math.h>
void draw_circle(int xc,int yc,int x,int y)
{
	int w=20,j;
	int mul1 = (w-1)/2;
	int mul2 = abs(x-xc) * abs(x-xc);
	int mul3 = abs(y-yc) * abs(y-yc);
	int mul4 = abs(x-xc);
	int wy1 = mul1 * (sqrtl(mul2+mul3));
	int wy = wy1/mul4;
	for(j=y+wy;j>y-wy;j--)
	{
	putpixel(xc+x,yc+j,1);
	putpixel(xc-x,yc+j,1);
	putpixel(xc+x,yc-j,1);
	putpixel(xc-x,yc-j,1);
	putpixel(xc+j,yc+x,1);
	putpixel(xc-j,yc+x,1);
	putpixel(xc+j,yc-x,1);
	putpixel(xc-j,yc-x,1);
	}
}
void mid_point(int xc,int yc,int r)
{
	int x = 0;
	int y = r;
	int d = 1-r;
	draw_circle(xc,yc,x,y);
	while(x<y)
	{
		x++;
		if(d<0)
		{
			d = d + (2*x) + 1;
		}
		else if(d>=0)
		{
			y--;
			d = d + (2 * (x-y)) + 1;
		}
		draw_circle(xc,yc,x,y);
	}
}
